#!/bin/bash

selected=$(find ~/Programming/Codes ~/Programming/web-design ~/Programming/Important ~/.config/ -mindepth 1 -maxdepth 1 -type d | rofi -dmenu -i -no-custom -p "Start tmux in: ")

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t $selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

alacritty -e tmux attach-session -t "$selected_name"
